<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context="com.softwareengineering.ttu.shadowruncharactermanager.CharacterCard">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/character_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#212121" />

            <ImageView
                android:id="@+id/character_image_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:onClick="chooseProfilePic"
                android:padding="25dp"
                android:src="@drawable/add"
                android:tint="#757575"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:id="@+id/btn_edit_character"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="editOn"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit"
                    android:tint="#757575" />

                <ImageButton
                    android:id="@+id/btn_done_edit_character"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="editOff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/done"
                    android:tint="#757575"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btn_save_character"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="saveCharacter"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save"
                    android:tint="#757575" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:layout_toRightOf="@+id/character_image2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/character_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/character_name"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/character_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/character_name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metatype" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TableRow
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/karma2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karma: " />

                        <TextView
                            android:id="@+id/karma2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/karma2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/nuyen2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nuyen: " />

                        <TextView
                            android:id="@+id/nuyen2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/nuyen2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Body: " />

                        <TextView
                            android:id="@+id/body2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/body2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/agility2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agility: " />

                        <TextView
                            android:id="@+id/agility2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/agility2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/reaction2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reaction: " />

                        <TextView
                            android:id="@+id/reaction2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/reaction2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/charisma2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charisma: " />

                        <TextView
                            android:id="@+id/charisma2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/charisma2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/intuition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intuition: " />

                        <TextView
                            android:id="@+id/intuition2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/intuition2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/logic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logic: " />

                        <TextView
                            android:id="@+id/logic2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/logic2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/willpower2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Willpower: " />

                        <TextView
                            android:id="@+id/willpower2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <EditText
                            android:id="@+id/willpower2_value_edit"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
